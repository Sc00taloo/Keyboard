<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10">

        <Button
            android:id="@+id/btnQuadraBracketLeft"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="[" />

        <Button
            android:id="@+id/btnQuadraBracketRight"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="]" />

        <Button
            android:id="@+id/btnCurlyBracketLeft"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="{" />

        <Button
            android:id="@+id/btnCurlyBracketRight"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="}" />

        <Button
            android:id="@+id/btnLattice"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="#" />

        <Button
            android:id="@+id/btnPercent"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="%" />

        <Button
            android:id="@+id/btnDegree"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="^" />

        <Button
            android:id="@+id/btnStar"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="*" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="+" />

        <Button
            android:id="@+id/btnEqual"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="=" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/btnUnderscores"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="_" />

        <Button
            android:id="@+id/btnSlashRight"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="\" />

        <Button
            android:id="@+id/btnStick"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="|" />

        <Button
            android:id="@+id/btnFloatingStick"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="~" />

        <Button
            android:id="@+id/btnAngleBracketLeft"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="&lt;" />

        <Button
            android:id="@+id/btnAngleBracketRight"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="&gt;" />

        <Button
            android:id="@+id/btnCurrencySwap"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="@string/currency_swap" />

        <Button
            android:id="@+id/btnCurrencyEuro"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="€" />

        <Button
            android:id="@+id/btnCurrencyFunt"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="£" />

        <Button
            android:id="@+id/btnCentrePoint"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="·"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="8">

        <Button
            android:id="@id/btnNumbers"
            style="@style/buttonTheme"
            android:layout_weight="1.5"
            android:text="123" />

        <Button
            android:id="@id/btnPoint"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="." />

        <Button
            android:id="@id/btnComma"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="," />

        <Button
            android:id="@id/btnQuestion"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="\?" />

        <Button
            android:id="@id/btnExclamation"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="\!" />

        <Button
            android:id="@id/btnMiniQuotes"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="'" />

        <Button
            android:id="@id/btnDelete"
            style="@style/buttonTheme"
            android:layout_weight="1.5"
            android:text="Back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9">

        <Button
            android:id="@+id/btnBaseKeyboard"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="ABC" />

        <Button
            android:id="@+id/btnVoiceInput"
            style="@style/buttonTheme"
            android:layout_weight="1"
            android:text="Micro" />

        <Button
            android:id="@+id/btnSpace"
            style="@style/buttonTheme"
            android:layout_weight="4.5"
            android:text="Space" />

        <Button
            android:id="@+id/btnEnter"
            style="@style/buttonTheme"
            android:layout_weight="2"
            android:text="Enter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>